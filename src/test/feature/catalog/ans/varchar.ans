      | 3
      | 
(4 rows)

SELECT '' AS six, c.*
   FROM VARCHAR_TBL c
   WHERE c.f1 <= 'a';
 six | f1 
-----+----
     | a
     | 1
     | 2
     | 3
     | 
(5 rows)

SELECT '' AS one, c.*
   FROM VARCHAR_TBL c
   WHERE c.f1 > 'a';
 one | f1 
-----+----
     | A
     | c
(2 rows)

SELECT '' AS two, c.*
   FROM VARCHAR_TBL c
   WHERE c.f1 >= 'a';
 two | f1 
-----+----
