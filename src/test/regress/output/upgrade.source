--
-- Operator Selectivity
--
for stmtrow in
SELECT 
    'CREATE OR REPLACE OR REPLACE FUNCTION upg_catalog.' || quote_ident(proname)
    || '(' 
    || coalesce(
        array_to_string( array(
                     select coalesce(proargnames[i] || ' ','') 
